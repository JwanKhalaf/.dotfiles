# set xdg_config_home
export XDG_CONFIG_HOME="$HOME/.config"

# add .net sdk directory to path
export PATH="$PATH:$HOME/.dotnet:$HOME/.dotnet/tools"

# .net root directory
export DOTNET_ROOT="$HOME/.dotnet"

# opt out of .net telemetry
export DOTNET_CLI_TELEMETRY_OPTOUT=1

# add jetbrains rider bin directory to path
export PATH="$PATH:~/programs/JetBrains Rider-2021.3.3/bin"

# add .NET environment variable
export ASPNETCORE_ENVIRONMENT=Development

# set pager for postgres
export PSQL_PAGER="less -iMFXSx4R"

# run Qt with wayland
QT_QPA_PLATFORM="wayland;xcb"

# jetbrains rider required export
export _JAVA_AWT_WM_NONREPARENTING=1

# add location of go-lang binaries to path environmental variable
export PATH=$PATH:/usr/local/go/bin

# set the gopath directory
export GOPATH=/home/j/code/go

# add location of local go-lang binaries to path environmental variable
export PATH=$PATH:$GOPATH/bin
